<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="kmitl.lab03.bawonsak58070074.simplemydot.EditDotFragment">

    <!-- TODO: Update blank fragment layout -->
    <kmitl.lab03.bawonsak58070074.simplemydot.view.EditDotView
        android:id="@+id/editDotView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="130dp" />


    <TextView
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:text="@string/edit_dot"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="135dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView"
        android:layout_marginStart="135dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_color"
        android:id="@+id/change_color"

        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editDotView"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/editDotView" />

<Button
    android:id="@+id/ok_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OK"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="54dp"
    app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
