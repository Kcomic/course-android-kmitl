<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="kmitl.lab03.bawonsak58070074.simplemydot.EditDotFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change to"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/yValue"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <kmitl.lab03.bawonsak58070074.simplemydot.view.EditDotView
        android:id="@+id/editDotView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="130dp" />


    <TextView
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:text="@string/edit_dot"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="135dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView"
        android:layout_marginStart="135dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_color"
        android:id="@+id/change_color"

        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editDotView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editDotView"
        android:layout_marginRight="10dp" />

<Button
    android:id="@+id/ok_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OK"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="54dp"
    app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X : 50"
        android:textSize="20sp"
        android:id="@+id/xValue"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/yValue"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.157" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y : 50"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ok_btn"
        app:layout_constraintRight_toRightOf="@+id/xValue"
        android:layout_marginBottom="94dp"
        android:id="@+id/yValue"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radis : 50"
        android:textSize="20sp"
        android:id="@+id/radius"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/yValue"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="change to"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:id="@+id/textView3"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView4" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="change to"
       tools:layout_constraintTop_creator="1"
       tools:layout_constraintRight_creator="1"
       android:layout_marginEnd="1dp"
       app:layout_constraintRight_toRightOf="@+id/textView4"
       android:layout_marginTop="22dp"
       app:layout_constraintTop_toBottomOf="@+id/textView4"
       android:id="@+id/textView2" />

    <EditText
        android:id="@+id/xEdited"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/yEdited"
        android:layout_marginStart="6dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toRightOf="@+id/change_color"
        android:layout_marginLeft="6dp" />
    <EditText
        android:id="@+id/yEdited"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/xEdited"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/xEdited"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/rEdited"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ok_btn"
        app:layout_constraintRight_toRightOf="@+id/yEdited"
        android:layout_marginTop="40dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/yEdited"
        app:layout_constraintTop_toTopOf="@+id/yEdited" />

</android.support.constraint.ConstraintLayout>
